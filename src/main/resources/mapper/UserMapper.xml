<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.summervacationproject.mapper.UserMapper">
    <select id="getNameById" resultType="java.lang.String">

        SELECT
            su.username
        FROM
            user su
        WHERE
            su.id = #{id}
    </select>
    <select id="getPwdById" resultType="java.lang.String">

        SELECT
            su.password
        FROM
            user su
        WHERE
            su.id = #{id}
    </select>
    <select id="getIdByName" resultType="java.lang.Integer">

        SELECT
            su.id
        FROM
            user su
        WHERE
            su.username = #{username}
    </select>
    <select id="getCount" resultType="java.lang.Integer">

        SELECT
            su.nodes_count
        FROM
            user su
        WHERE
            su.username = #{username}
    </select>
    <insert id="addUser" keyProperty="id" useGeneratedKeys="true" parameterType="com.example.summervacationproject.bean.User">
        insert into user(username,password,nodes_count)
        values(#{username},#{password},#{nodes_count})
    </insert>
    <update id="setCount" parameterType="com.example.summervacationproject.bean.Item">
        UPDATE user SET nodes_count = #{value} WHERE username = #{username}
    </update>
</mapper>